public class Solution {
    public static boolean isPowerOfTwo(int n) {
        // A power of two must be positive and have only one '1' bit in its binary representation
        return n > 0 && (n & (n - 1)) == 0;
    }

    public static void main(String[] args) {
        System.out.println(isPowerOfTwo(1));   // true  (2^0 = 1)
        System.out.println(isPowerOfTwo(16));  // true  (2^4 = 16)
        System.out.println(isPowerOfTwo(3));   // false
    }
}
